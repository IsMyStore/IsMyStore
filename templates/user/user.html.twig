{% extends 'settings.base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="col-xl-4">
        <!-- Profile picture card-->
        <div class="card mb-4 mb-xl-0">
            <div class="card-header">Profile Picture</div>
            <div class="card-body text-center">
                <img class="img-account-profile rounded-circle mb-2"
                     src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                <button class="btn btn-primary" type="button">Upload new image</button>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <!-- Account details card-->
        <div class="card mb-4">
            <div class="card-header">Account Details</div>
            <div class="card-body">
                <form method="post">
                    {{ form_start(accountEditionForm) }}
                    <div class="mb-3">
                        <label class="small mb-1" for="account_edit_form_username">Username</label>
                        {{ form_row(accountEditionForm.username) }}
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1" for="account_edit_form_first_name">First name</label>
                            {{ form_row(accountEditionForm.first_name) }}
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1" for="account_edit_form_last_name">Last name</label>
                            {{ form_row(accountEditionForm.last_name) }}
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1" for="account_edit_form_organization_name">Organization
                                name</label>
                            {{ form_row(accountEditionForm.organization_name) }}
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1" for="account_edit_form_location">Location</label>
                            {{ form_row(accountEditionForm.location) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="small mb-1" for="account_edit_form_email">Email address</label>
                        {{ form_row(accountEditionForm.email) }}
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <!--
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1" for="inputPhone">Phone number</label>
                            <input class="form-control" id="inputPhone" type="tel"
                                   placeholder="Enter your phone number" value="555-123-4567">
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1" for="inputBirthday">Birthday</label>
                            <input class="form-control" id="inputBirthday" type="text" name="birthday"
                                   placeholder="Enter your birthday" value="06/10/1988">
                        </div>
                    </div>
                    -->

                    <button class="btn btn-primary" type="submit">Save changes</button>
                    {{ form_end(accountEditionForm) }}
                </form>
            </div>
        </div>
    </div>

{% endblock %}
